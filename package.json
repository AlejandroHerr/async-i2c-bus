{
  "name": "async-i2c-bus",
  "version": "0.0.0-development",
  "description": "Bus and Device classes for i2c-bus, with promised functions.",
  "keywords": [
    "i2c-bus",
    "i2c-device",
    "i2c-interface",
    "i2c",
    "pi",
    "Raspberry Pi",
    "raspberry",
    "rpi"
  ],
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "repository": "git@github.com:AlejandroHerr/i2cBus.js.git",
  "author": "AlejandroHerr <hola@alejandroherr.io>",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rm -rf dist",
    "cz": "git-cz",
    "doc:md": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out docs --theme markdown",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out dist/docs",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d dist/docs",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier \"src/**/*.ts\" --list-different",
    "lint:tslint": "tslint --project .",
    "release": "run-s release:semantic",
    "release:prepare": "run-s doc:html doc:publish",
    "release:semantic": "semantic-release || true",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@types/jest": "^23.3.10",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^2.0.1",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "semantic-release": "^15.12.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/i2c-bus": "^1.0.19",
    "@types/node": "^10.12.12",
    "bluebird": "^3.5.3",
    "i2c-bus": "^4.0.6",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": ">=8.10.0"
  }
}
